{
  "name": "solid-framework-nodejs",
  "version": "1.0.0",
  "description": "Clean Architecture KoaJS Inspired. (Credits: Jérémy Buget)",
  "main": "./dist/backend/index.js",
  "scripts": {
    "prepare": "npm run tsc:backend && npx husky install",
    "start": "NODE_ENV=prod node --enable-source-maps ./dist/backend/index.js",
    "dev": "nodemon --enable-source-maps ./dist/backend/index.js",
    "tsc:backend": "npx tsc --project ./backend/tsconfig.json && npm run copy-views",
    "tsc:backend:w": "npx tsc -w --project ./backend/tsconfig.json",
    "test": "mocha -t 5000 --require source-map-support/register ./dist/**/*.test.js",
    "test:w": "mocha --watch -t 5000 --require source-map-support/register ./dist/**/*.test.js",
    "copy-views": "cp -r './backend/views/' ./dist/backend/",
    "prettier:format": "prettier --config .prettierrc 'backend/**/*.ts' --write",
    "eslint": "eslint 'backend/**/*.ts'",
    "eslint:fix": "eslint --fix 'backend/**/*.ts'",
    "format": "npm run prettier:format",
    "update-all-modules-to-latest": "ncu -u"
  },
  "author": "Saurabh",
  "license": "ISC",
  "repository": {},
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@koa/router": "^10.1.1",
    "@types/clone-deep": "^4.0.1",
    "@types/express": "^4.17.13",
    "ajv": "^8.7.1",
    "clone-deep": "^4.0.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-ejs": "^4.3.0",
    "koa-json": "^2.0.2",
    "koa-json-error": "^3.1.2",
    "mongoose": "^5.13.13",
    "path-to-regexp": "^6.2.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.4",
    "@types/koa-ejs": "^4.3.0",
    "@types/koa-json": "^2.0.20",
    "@types/koa-json-error": "^3.1.4",
    "@types/koa__cors": "^3.0.3",
    "@types/koa__router": "^8.0.9",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "chai": "^4.3.4",
    "copyfiles": "^2.4.1",
    "eslint": "8.2.0",
    "husky": "^7.0.4",
    "husky-init": "^7.0.0",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.15",
    "npm-check-updates": "^12.0.2",
    "prettier": "^2.4.1",
    "source-map-support": "^0.5.20",
    "typescript": "^4.4.4"
  },
  "engines": {
    "node": ">=14",
    "npm": ">=8.1",
    "yarn": ">=1.22.17"
  }
}
